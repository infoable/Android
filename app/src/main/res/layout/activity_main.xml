<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/over_textbox"
        android:elevation="8dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingStart="36dp"
        android:paddingEnd="36dp"
        android:paddingBottom="24dp">

        <View
            android:layout_width="36dp"
            android:layout_height="6dp"
            android:background="@drawable/over_handle" />

        <TextView
            android:id="@+id/listen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="48dp"
            android:text="듣고 있습니다..."
            android:visibility="gone"
            android:fontFamily="@font/nanumsquarer"
            android:textColor="@android:color/black"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/talk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/msg_color"
            android:fontFamily="@font/nanumsquarer"
            android:padding="14dp"
            android:text="헬로 에이블"
            android:visibility="visible"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginBottom="36dp"
            android:background="@drawable/over_handle"
            android:fontFamily="@font/nanumsquarer"
            android:padding="14dp"
            android:text="안녕하세요? Able입니다."
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_textbox"
            android:elevation="4dp"
            android:padding="20dp"
            android:src="@drawable/ic_mic_black_24dp" />
    </LinearLayout>

</RelativeLayout>